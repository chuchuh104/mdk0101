<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Simple WPF App" Height="350" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="AddButton" Content="Add" Click="AddButton_Click"/>
            <Button x:Name="DelButton" Content="Del" Click="DelButton_Click"/>
            <Button x:Name="ClearButton" Content="Clear" Click="ClearButton_Click"/>
        </StackPanel>
        <ListView x:Name="listView" Grid.Row="1"/>
    </Grid>
</Window>

